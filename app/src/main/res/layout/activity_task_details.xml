<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="Tasks"
                type="com.example.taskscheduler.Tasks"/>
    </data>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout

            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".TaskDetails">

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Task Name"
                android:ems="10"
                android:text="@={Tasks.text}"
                android:tag="@{Tasks.id}"
                android:id="@+id/task_name" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="Task Description"
                android:ems="10"
                android:text="@={Tasks.description}"
                android:id="@+id/task_desc" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/task_name" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="datetime"
                android:hint="Time"
                android:text="@={Tasks.created}"
                android:ems="10"
                android:id="@+id/time" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/task_desc"/>

        <TimePicker
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/time"
                app:layout_constraintStart_toStartOf="parent"
                android:timePickerMode="spinner"
                android:id="@+id/time_picker"
                android:maxHeight="30dp"
                android:layout_height="wrap_content">

        </TimePicker>

        <CheckBox
                android:text="Send me a notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@={Tasks.done}"
                android:id="@+id/checkBox" android:layout_marginTop="68dp"
                app:layout_constraintTop_toBottomOf="@+id/time_picker" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>


        <!--Button
                android:text="Dismiss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cancel" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/checkBox"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_save"/>
        <Button
                android:text="Save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_color"
                android:id="@+id/btn_save" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/btn_cancel" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/btn_cancel"
                app:layout_constraintHorizontal_bias="0.5"/-->
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>